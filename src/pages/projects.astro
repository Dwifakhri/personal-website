---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { projects } from "@/data/data.ts";
---

<Layout>
    <Navbar isIndexRoute={false} />
    <section id="project" class="section mx-auto max-w-6xl px-4 py-24 md:px-10">
        <div
            class="mb-12 flex flex-col md:flex-row justify-center items-center"
        >
            <h2 class="text-3xl md:text-5xl font-bold mb-4 primary-gradient">
                Projects
            </h2>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <ProjectCard
                        img={project.img}
                        title={project.title}
                        description={project.description}
                        techs={project.techs}
                        codeUrl={project.codeUrl}
                        liveUrl={project.liveUrl}
                    />
                ))
            }
        </div>
    </section>
    <Footer />
</Layout>
